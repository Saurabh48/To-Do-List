<%- include("header") -%>

<div class="box" id="heading">
    <h1><%= listTitle %></h1>
</div>

<div class="box">
    <form action="/delete" method="post">

    <% newitems.forEach(function(element){ %>
    <div class="item">
        <input type="checkbox" name="checked" value="<%=element._id%>" onchange="this.form.submit()">
        <p><%= element.name %></p>
    </div>
    <% }); %>
    <input type="hidden" name="mylist" value="<%=listTitle%>">

    </form>

</div>

<div class="box">
    <form class="item" action="/" method="post">
        <input type="text" name="newitem" placeholder="New Item" autocomplete="off" required>
        <button type="submit" name="newlist" value="<%= listTitle %>">+</button>
    </form>
</div>

<%- include("footer") -%>